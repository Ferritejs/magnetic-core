{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [".eslintrc.js", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "test"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
